<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReceiptManager_v00" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_blue</item>
        <item name="colorPrimaryVariant">@color/deep_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_blue</item>
        <item name="colorSecondaryVariant">@color/deep_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue_full</item>
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomButton">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/deep_blue</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_text_input</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CustomDatePicker">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="CustomTextView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/deep_blue</item>
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CustomRVTextView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CustomTitleTextView">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">64dp</item>
    </style>
</resources>